%table.table.table-striped.sortable{"data-provides" => "rowlink"}
  %thead
    %tr
      %th{:style => 'display:none;'}= "Action"
      %th= sortable 'provider_name', 'Name', params[:zip], params[:radius]
      %th= sortable 'average_estimated_submitted_charges', 'Avg. Submitted Charges', params[:zip], params[:radius]
      %th= sortable 'average_total_payments', 'Avg. Total Payments', params[:zip], params[:radius]
      %th= sortable 'outpatient_services', 'Services Performed', params[:zip], params[:radius]
      
  %tbody
    - @paginated_provider_outpatient_procedures.each do |provider_outpatient_procedure|
      %tr
        %td{:style => 'display:none;'}= link_to "Show", provider_outpatient_procedure_path(provider_outpatient_procedure)
        %td= provider_outpatient_procedure.provider_name
        %td= number_to_currency(provider_outpatient_procedure.average_estimated_submitted_charges, :precision => 0)
        %td= number_to_currency(provider_outpatient_procedure.average_total_payments, :precision => 0)
        %td= provider_outpatient_procedure.outpatient_services
= paginate @paginated_provider_outpatient_procedures