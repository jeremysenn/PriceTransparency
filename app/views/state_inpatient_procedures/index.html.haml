- model_class = StateInpatientProcedure
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:drg)
      %th= model_class.human_attribute_name(:provider_state)
      %th= model_class.human_attribute_name(:total_discharges)
      %th= model_class.human_attribute_name(:average_covered_charges)
      %th= model_class.human_attribute_name(:average_total_payments)
      %th= model_class.human_attribute_name(:year)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @state_inpatient_procedures.each do |state_inpatient_procedure|
      %tr
        %td= link_to state_inpatient_procedure.id, state_inpatient_procedure_path(state_inpatient_procedure)
        %td= state_inpatient_procedure.drg
        %td= state_inpatient_procedure.provider_state
        %td= state_inpatient_procedure.total_discharges
        %td= state_inpatient_procedure.average_covered_charges
        %td= state_inpatient_procedure.average_total_payments
        %td= state_inpatient_procedure.year
        %td=l state_inpatient_procedure.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_state_inpatient_procedure_path(state_inpatient_procedure), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), state_inpatient_procedure_path(state_inpatient_procedure), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

- if true
  %hr
  %h2 Import State Inpatient Procedures
  = form_tag import_state_inpatient_procedures_path, multipart: true do
    = file_field_tag :file
    = submit_tag "Import"

= link_to t('.new', :default => t("helpers.links.new")), new_state_inpatient_procedure_path, :class => 'btn btn-primary'
