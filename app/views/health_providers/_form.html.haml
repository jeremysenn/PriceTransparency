= simple_form_for @health_provider, :html => { :class => 'form-horizontal' } do |f|
  = f.input :provider_id
  = f.input :name
  = f.input :address
  = f.input :city
  = f.input :state
  = f.input :zipcode
  = f.input :hospital_referral_region_description
  = f.input :year
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), health_providers_path, :class => 'btn'
